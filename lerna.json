{
    "version": "independent",
    "useWorkspaces": true,
    "command": {
        "publish": {
            "message": "chore(release): publish",
            "ignoreChanges": [
                "**/*.md",
                "**/.github/*",
                "**/__tests__/*"
            ]
        },
        "version": {
            "conventionalCommits": true,
            "changelogPreset": {
                "name": "conventionalcommits"
            }
        }
    }
}
