{
    "version": "independent",
    "command": {
        "publish": {
            "message": "chore(release): publish",
            "ignoreChanges": [
                "*.md",
                "**/.github/**",
                "**/__tests__/**",
                "**/test/**",
                "**/ci/**"
            ]
        },
        "version": {
            "allowBranch": "main",
            "conventionalCommits": true,
            "changelogPreset": "conventionalcommits"
        }
    },
    "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
