{
    "version": "independent",
    "useWorkspaces": true,
    "useNx": true,
    "command": {
        "publish": {
            "message": "chore(release): publish",
            "ignoreChanges": [
                "**/*.md",
                "**/.github/*",
                "**/__tests__/*"
            ]
        },
        "version": {
            "allowBranch": "main",
            "conventionalCommits": true,
            "changelogPreset": {
                "name": "conventionalcommits"
            }
        }
    },
    "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
